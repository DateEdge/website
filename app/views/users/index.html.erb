<div class="col-sm-12">
  <div class="page-header">
    <% if params[:search] %>
      <h1>
        <% if @column %>
          <%= link_to @column.capitalize, send("#{@column}_path") %> :
        <% else %>
        Search:
        <% end %>
        <%= @query.capitalize %>
        <small>
          (<%= @total %>)
        </small>
      </h1>
    </div>
    <% else %>
      <h1>Everyone <small>search is coming soon</small></h1>
    <% end %>
  </div>
  
  
  <% cache [cache_key_for_users, params[:page] || 1] do %>
    <% @users.in_groups_of(2) do |group| %>
      <div class="row">
        <% group.each do |user| %>
          <% unless user.nil? %>
            <div class="col-sm-6">
              <%= render user %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

<div class="col-sm-12" id="pagination">
  <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
</div>
