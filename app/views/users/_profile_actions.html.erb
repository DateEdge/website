<% if mine? %>
  <%= link_to new_photo_path, class: "btn btn-success" do %>
    <i class='fa fa-picture-o'></i>&nbsp;&nbsp;Add Photo
  <% end %>

  <%= link_to settings_path,  class: "btn btn-default" do %>
    <i class='fa fa-pencil'></i><span class="hidden-xs">&nbsp;&nbsp;Edit Profile</span>
  <% end %>

<% elsif not_mine? %>
  <div class="actions">

    <span class="btn-group">
      <%# MESSAGE BUTTON %>
      <%= link_to "<i class='fa fa-comment'></i>".html_safe, new_message_path(username: user.username), class: "btn btn-info" %>


      <%# BOOKMARK BUTTON %>
      <% if im.bookmarking?(user) %>

        <%# bookmarked %>
        <div class="btn-group">
          <%= link_to "<i class='fa fa-ban'></i>".html_safe, action_unbookmark_path(user.username), method: :delete, id: "unbookmark", class: "bookmark form-inline btn btn-warning", "data-username" => user.username %>
        </div>

      <% else %>
        <%= link_to "<i class='fa fa-star'></i>".html_safe, action_bookmark_path(user.username), method: :post, id: "new_secret_crush", class: "bookmark form-inline btn btn-warning", "data-username" => user.username %>
      <% end %>

      <%# CRUSH BUTTON %>
      <% if im.crushing_on?(user) %>
      <%= link_to "<i class='fa fa-ban'></i> <b>Uncrush</b>".html_safe, uncrush_path(user.username), class: "crush btn btn-danger", "data-username" => user.username, method: :delete %>
      <% else %>
        <%= link_to "<i class='fa fa-heart'></i> <b>Crush</b>".html_safe, crush_path(user.username), class: "crush btn btn-danger", "data-username" => user.username, method: :post %>
      <% end %>

    </span>
  </div><!-- .actions -->
<% end %>
