<h1>
  <%= current_user.name %>
  <% if current_user.username %>[<%= current_user.username %>]<% end %>
  <% if current_user.age %>(<%= current_user.age %>)<% end %>
</h1>

<h2>
  <% if current_user.city %><%= current_user.city %>,<% end %>
  <% if current_user.state %><%= current_user.state %>,<% end %>
  <% if current_user.country %><%= current_user.country %><% end %>
</h2>

<h3>
  I am a <b><%= current_user.me_gender %></b>
  looking for a <b><%= current_user.you_gender %></b>
</h3>

<section>
  <%= simple_format current_user.bio %>
  <p><%= current_user.diet %></p>
</section>

<section>
  <%= current_user.zip %>
  <a href="mailto:<%= current_user.email %>"><%= current_user.email %></a>
  <time><%= current_user.birthday.to_s %></time>
</section>
