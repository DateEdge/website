<div class="row">

  <div class="col-sm-6">
    <% if @crushers && @crushers.any? %>
      <div class="page-header">
        <h1>
          Crushers
          <small>they like you</small>
        </h1>
      </div>

      <%= render @crushers %>
    <% end %>

    <div class="page-header">
      <h1>
        Crushes
        <small>you like them</small>
      </h1>
    </div>
    
    <% if @crushes.empty? %>
      <b class='lead''>Looks like you're not crushing on anyone.</b>
    <% end %>
    <%= render @crushes %>

    <% if @bookmarked_users && @bookmarked_users.any? %>
      <div class="page-header">
        <h1>
          Bookmarks
          <small>you bookmarked them</small>
        </h1>
      </div>

      <%= render @bookmarked_users %>
    <% end %>
  </div>
</div>