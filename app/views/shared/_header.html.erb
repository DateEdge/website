<header role="banner">
  <h1><%= link_to_unless_current "Date Edge", root_path, rel: "home" %></h1>

  <nav role="navigation">
    <% if logged_in? %>
      <%= link_to current_user.name, person_path(current_user.username), class: "profile-link"  %>
      <%= link_to "Inbox",           conversations_path,                 class: "inbox-link"    %>
      <% if unread_count %><b id="unread-count"><%= unread_count %></b><% end %>
      <%= link_to "Settings",        settings_path,                      class: "settings-link" %>
    <% else %>
      Sign in with
      <%= link_to "Twitter",  "/auth/twitter" , class: "twitter-sign-in-link"  %>
      <%= link_to "Facebook", "/auth/facebook", class: "facebook-sign-in-link" %>
    <% end %>
  </nav>
</header>
