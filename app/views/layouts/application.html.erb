<!DOCTYPE html>

<html dir="ltr" lang="en" id="<%= @slug %>" class="no-js">
<%= render partial: "/shared/head" %>

<body>

  <% if welcome? %>
    <%= render partial: "/shared/welcome_header" %>
  <% else %>
    <%= render partial: "/shared/header" %>
  <% end %>

  <section role="main" class="container">
    <%= render partial: "/shared/browse_happy" %>

    <% unless logged_in? || controller_name == "welcome" %>
      <%= render partial: "/shared/social_posting_info" %>
    <% end %>

    <% if show_update_profile? %>
      <p class="alert alert-success">
        Completed profiles have the best success.
        <b><%= link_to "Go update yours now! &rarr;".html_safe, settings_path, class: "alert-link" %></b>
      </p>
    <% end %>
    <%= render partial: "/shared/flashes" %>

    <%= yield %>
  </section>

  <footer role="contentinfo" class="container">
    <% if @user && not_mine? %>
      <%# TODO make blocking work %>
      <%#= link_to "Block @#{@user.username}", "/@#{@user.username}/block", class: "btn btn-danger btn-block" %>
    <% end %>

    <% if logged_in? %>
      <%= link_to_unless_current "Sign Out", signout_path, class: "btn btn-default btn-block" %>
    <% end %>
  </footer>

  <%= render partial: "/shared/foot" %>
</body>
</html>
