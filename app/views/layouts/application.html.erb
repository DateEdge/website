<%= render :partial => '/shared/head' %>

<body>
  <% unless welcome? %>
    <nav role="navigation">
      <%= link_to "Everyone", people_path %>

      <% if current_user %>
        <%= link_to_unless_current "Sign Out", signout_path %>
        <%= link_to_unless_current current_user.name, person_path(current_user.username) if current_user.username %>
        <%= link_to_unless_current "Settings", settings_path %>
        <%= link_to_unless_current "Inbox (#{unread_count})", conversations_path %>
      <% else %>
        <%= link_to "Sign in with Twitter",  "/auth/twitter"  %>
        <%= link_to "Sign in with Facebook", "/auth/facebook" %>
      <% end %>
    </nav>
  <% end %>

  <header role="banner">
    <%= yield :header %>
  </header>

  <section role="main">
    <%= yield %>
  </section>

  <footer role="contentinfo">
    <%= yield :footer %>
  </footer>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.js"></script>
  <script>!window.jQuery && document.write(unescape('%3Cscript src="javascripts/jquery.js"%3E%3C/script%3E'))</script>
  <%= javascript_include_tag "modernizr" %>

  <%= render :partial => '/shared/google_analytics' %>
</body>
</html>
