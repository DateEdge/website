<!DOCTYPE html>

<html dir="ltr" lang="en" id="<%= @slug %>" class="no-js">
<%= render :partial => '/shared/head' %>

<body>
  <% if welcome? %>
    <%= render :partial => '/shared/welcome_header' %>
  <% else %>
    <%= render :partial => '/shared/header' %>
  <% end %>

  <section role="main">
    <% if profile_incomplete? %>
      <p class="notice">
        <b><%= link_to "Update your profile for great success &rarr;".html_safe, settings_path %></b>
      </p>
    <% end %>

    <%= yield %>
  </section>

  <footer role="contentinfo">
    <% if logged_in? %>
      <%= link_to_unless_current "Sign Out", signout_path, :class => "button white full" %>
    <% end %>
  </footer>

  <%= render :partial => '/shared/print_css' %>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.js"></script>
  <script>!window.jQuery && document.write(unescape('%3Cscript src="/javascripts/jquery.js"%3E%3C/script%3E'))</script>
  <%= javascript_include_tag "rails" %>

  <% if @slug %>
    <script>
      <%= render "/javascripts/#{@slug}" rescue nil %>
    </script>
  <% end %>

  <%= render :partial => '/shared/google_analytics' %>
</body>
</html>
