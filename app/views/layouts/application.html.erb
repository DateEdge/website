<!doctype html>
<!--[if lt IE 7 ]>             <html dir="ltr" lang="en" id="<%= @slug %>" class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]>                <html dir="ltr" lang="en" id="<%= @slug %>" class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>                <html dir="ltr" lang="en" id="<%= @slug %>" class="no-js ie8"> <![endif]-->
<!--[if IE 9 ]>                <html dir="ltr" lang="en" id="<%= @slug %>" class="no-js ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html dir="ltr" lang="en" id="<%= @slug %>" class="no-js"    > <!--<![endif]-->
<%= render :partial => '/shared/head' %>

<body>
  <% if welcome? %>
    <%= render :partial => '/shared/welcome_header' %>
  <% else %>
    <%= render :partial => '/shared/header' %>
  <% end %>

  <section role="main">
    <%= yield %>
  </section>

  <footer role="contentinfo">
    <% if logged_in? %>
      <%= link_to_unless_current "Sign Out", signout_path, :class => "button gray full" %>
    <% end %>
  </footer>

  <%= render :partial => '/shared/print_css' %>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.js"></script>
  <script>!window.jQuery && document.write(unescape('%3Cscript src="javascripts/jquery.js"%3E%3C/script%3E'))</script>
  <%= javascript_include_tag "rails" %>

  <% if @slug %>
    <script>
      <%= render "/javascripts/#{@slug}" rescue nil %>
    </script>
  <% end %>

  <%= render :partial => '/shared/google_analytics' %>
</body>
</html>
