<div id="conversation" class="h-feed">
  <div class="page-header">
    <h1>
      <%= @conversation.subject %>
    </h1>
  </div>

  <ol class="messages">
    <% @messages.each_with_index do |message, index| %>
      <li class="h-entry message <%= "from-me" if message.sender == current_user %>">
        <%= render message.sender %>

        <div class="e-content message-body <%= "well lead" if index == (@conversation.messages.length - 1) %>">
          <%= user_inputed_text(message.body).html_safe %>
        </div>
      </li>
    <% end %>
  </ol>

  <div id="reply">
    <h1>Reply</h1>
    <%= render '/messages/form', message: @message %>
  </div>
</div>
<div class="col-12">
    <%= button_to "Delete Conversation",
      delete_conversation_path(@user.username),
      method:  :delete,
      confirm: "Uhhhh&hellip; Are you sure you want to delete this conversation?".html_safe,
      class:   "btn btn-danger btn-xs" %>

</div>