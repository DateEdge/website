<%= form_for message do |f| %>
  <% if @conversation.new_record? %>
    <%= f.label :subject, "Subject" %>
    <%= f.text_field :subject, autocapitalize: "words" %>
  <% else %>
    <%= f.hidden_field :conversation_id %>
  <% end %>
  
  <%= f.hidden_field :recipient_id %>
  
  <%= f.label :body, "Body" %>
  <%= f.text_area :body, autocapitalize: "sentences", placeholder: "Say something nice and more than &lsquo;hey...&rsquo;".html_safe %>

  <%= f.submit "Send", disable_with: 'Sending...', class: "button black full" %>
<% end %>
