<%= form_for message do |f| %>
  <% if @conversation.new_record? %>
    <%= f.label :subject, "Subject" %>
    <%= f.text_field :subject %>
  <% else %>
    <%= f.hidden_field :conversation_id %>
  <% end %>
  
  <%= f.hidden_field :recipient_id %>
  
  <%= f.label :body, "Body" %>
  <%= f.text_area :body, :placeholder => "Say something nice and more than 'hey...'" %>

  <%= f.submit "Send", :disable_with => 'Sending...', :class => "button white full" %>
<% end %>
