<div id="sign_in">
  <%= link_to "Sign in with Twitter",  "/auth/twitter",  :class => "twitter_button"  %>
  <i>or</i>
  <a href="/auth/twitter" class="facebook_button"><span>Login with <b>Facebook</b></span></a>
</div>

<div id="people">
  <h2>Some people using <b>Date Edge</b></h2>
  <ul>
    <% @users.each do |user| %>
      <li>
        <%= link_to person_path(user.username) do %>
          <%= image_tag user.avatar, :alt => user.username %>
        <% end %>
      </li>
    <% end %>
  </ul>
  <%= link_to "See everyone...", people_path %>
</div>

