<h1>Hello Admin <%= current_user.username %></h1>

<div class='row'>

  <div class='col-lg-6'>
    <div class='well'>
      <dl class="dl-horizontal">
        <dt>Users</dt>
        <dd><%= User.visible.count %> / <%= User.count %></dd>
        <dt>Conversations Started</dt>
        <dd><%= Conversation.count %></dd>
        <dt>Messages Sent</dt>
        <dd><%= Message.count %></dd>
        <dt>Crushes Crushed</dt>
        <dd><%= Crush.count %></dd>
      </dl>
    </div>
  </div>

  <div class='col-lg-6'>
    <div class='well'>
      <h1>2014 Goals</h1>
      <ul>
        <li>Map</li>
        <li>Social sidebar 2.0</li>
        <li>DxE Deck&trade;</li>
        <li>Local meetups</li>
        <li>iOS app</li>
        <li>5,000 users</li>
      </ul>
    </div>
  </div>

</div><!-- .row -->

<table class='table table-striped table-bordered'>
  <thead>
    <tr>
      <th>Username</th>
      <th width='50'>Featured</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, admin_edit_user_path(user) %></td>
        <td class='text-center'><%= content_tag "i", "", class: "text-warning glyphicon glyphicon-star" if user.featured? %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @users %>