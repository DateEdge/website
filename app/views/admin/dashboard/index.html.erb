<h1>Hello Admin <%= current_user.username %></h1>
<div class='row'>
  <div class='col-lg-12'>
    <div class='well'>
      <dl class="dl-horizontal">
        <dt>Visible Users</dt>
        <dd><%= User.visible.count %></dd>
        <dt>Conversations Started</dt>
        <dd><%= Conversation.count %></dd>
        <dt>Messages Sent</dt>
        <dd><%= Message.count %></dd>
        <dt>Crushes Crushed</dt>
        <dd><%= Crush.count %></dd>
      </dl>
    </div>
  </div>
</div>

<table class='table table-striped table-bordered'>
  <thead>
    <tr>
      <th>Username</th>
      <th width='50'>Featured</th>
    </tr>
  </thead>
  <tbody>
    <% User.order("created_at desc").each do |user| %>
      <tr>
        <td><%= link_to user.username, edit_admin_user_path(user) %></td>
        <td class='text-center'><%= content_tag "i", "", class: "text-warning glyphicon glyphicon-star" if user.featured? %></td>
      </tr>
    <% end %>
  </tbody>
</table>